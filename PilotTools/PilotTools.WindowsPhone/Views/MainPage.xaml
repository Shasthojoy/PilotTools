<Page
    x:Class="PilotTools.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PilotTools.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Pivot x:Name="LayoutRoot" Title="PILOT TOOLS - AIRPORTS">
        <PivotItem Header="favorites">
            <ListBox x:Name="lbFavorites" 
                        Background="Transparent"
                        Foreground="White"
                        ItemsSource="{Binding Favorites}"
                        DisplayMemberPath="ICAO"
                        SelectionChanged="lbFavorites_SelectionChanged"
                        FontSize="36" />
        </PivotItem>
        <PivotItem Header="flight plans">
            <ListBox x:Name="lbFlightPlans"
                     Background="Transparent"
                     Foreground="White"
                     ItemsSource="{Binding FlightPlans}"
                     SelectionChanged="lbFlightPlans_SelectionChanged"
                     FontSize="36" />
        </PivotItem>
        <PivotItem Header="around me">
            <ListBox x:Name="lbAroundMe" 
                     Background="Transparent"
                     ItemsSource="{Binding AroundMe}"
                     DisplayMemberPath="ICAO"
                     Foreground="White"
                     SelectionChanged="lbAroundMe_SelectionChanged"
                     FontSize="36" />
        </PivotItem>
    </Pivot>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="BtnSettings"
                              Icon="Setting"
                              Label="settings" />
                
                <AppBarButton x:Name="BtnAdd" 
                              Click="BtnAdd_Click"
                              Icon="Add" 
                              Label="add" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
